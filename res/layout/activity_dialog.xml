<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="10dp"
        >

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/dialog_icon"
            android:gravity="center"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="20dp"
            >

            <Button
                android:id="@+id/trash"
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:background="@drawable/trash_fill_2x"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/dialog_icon_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#1e2732"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/save2media"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:background="@drawable/square_and_arrow_down"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>